<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= render 'users/info', user: current_user %>
      <h2>New book</h2>
        <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Groups</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>メンバー数</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= image_tag room.get_image, size: '50x50' %></td>
            <td><%= room.name %></td>
            <td><%= room.introduction %></td>
            <td><%= room.users.count %></td>
            <td><%= link_to 'Show', room, class: "room_#{room.id}" %></td>
              <% if room.is_owned_by?(current_user) %>
                <td><%= link_to 'Edit', edit_room_path(room), class: "room_#{room.id}" %></td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </div>
    </table>
  </div>
</div>