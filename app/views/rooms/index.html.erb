<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= render 'users/info', user: current_user %>
      <h2>New book</h2>
        <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Groups</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= image_tag room.get_image, size: '50x50' %></td>
            <td><%= link_to room.name, room_path(room) %></td>
            <td><%= room.introduction %></td>
            <td>
              <% if room.owner_id == current_user.id %>
                <%= link_to 'Edit', edit_room_path(room), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </div>
    </table>
  </div>
</div>